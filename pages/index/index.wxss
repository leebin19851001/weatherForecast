/**index.wxss**/

.container-image {
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: .7;
  z-index: -99;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  border: 1px solid #fff;
  border-radius: 10rpx;
  margin-top: 200px;
  font-size: 40rpx;
  color: #fff;
  padding: 10rpx;
}